{
  "compilerOptions": {
    "types": ["node"],
    "lib": ["ES2019"],
    "module": "commonjs",
    "target": "ES2020",
    "declaration": true,
    "declarationMap": true,
    "diagnostics": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "outDir": "lib",
    "plugins": [{ "transform": "@zerollup/ts-transform-paths" }]
  },
  "include": ["./**/*.ts", "test"],
  "exclude": [
    "node_modules/**/*",
    ".serverless/**/*",
    ".webpack/**/*",
    "_warmup/**/*",
    ".vscode/**/*"
  ]
}
